<html>

<head>
    <title>
        <%= locals.title %>
    </title>

    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.8/css/line.css">
    <link rel="stylesheet" href="/css/home.css">

</head>

<body>

    <section>
        <h1 id="page-heading">
            <i class="uil uil-list-ul"></i>
            My Contacts List
        </h1>

        <div id="contacts-list-container">
            <ul class="contacts-list">
                <% for(let i of contact_list) { %>
                    <li class="contact">
                        <div class="details">
                            <p><i class="uil uil-user-circle"></i>
                                <%= i.name %>
                            </p>
                            <p>
                                <%= i.phone %>
                            </p>
                        </div>

                        <div class="delete-button">
                            <!-- <a href="/delete-contact/<%= i.phone %>"> -->
                            <!-- <a href="/delete-contact/?phone=<%= i.phone %>"> -->
                            <a href="/delete-contact/?id=<%= i._id %>">
                            
                                <i class="uil uil-trash-alt"></i>
                            </a>
                        </div>
                    </li>
                <% }%>
            </ul>
        </div>


        <form id="new-contact-form" action="/create-contact" method="post">
            <input type="text" name="name" id="" placeholder="Enter Name" required>
            <input type="number" name="phone" id="" placeholder="Enter Phone" required>
            <button type="submit">Add Contact</button>
        </form>

    </section>


    <script type="text/javascript" src="/js/home.js"></script>
</body>

</html>